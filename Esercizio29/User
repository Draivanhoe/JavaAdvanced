public class User {
    private String name;
    private int age;
    private static User instance;

    public static User cercaIstanza() {
        if (instance == null) {
            instance = new User();
        }

        return instance;
    }

    public String getName() {
        return name;
    }

    public int getAge() {
        return age;
    }

    public void setName(String name) {
        this.name = name;
    }

    public void setAge(int age) {
        this.age = age;
    }

    public void showPerson() {
        System.out.println("Nome: " + name +
                "\nEt√†: " + age);
    }
}
